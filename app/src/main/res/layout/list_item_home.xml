<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="adapterPosition"
            type="Integer" />

        <variable
            name="user"
            type="es.chewiegames.data.model.User" />

        <variable
            name="feedPost"
            type="es.chewiegames.domain.model.Post" />

        <variable
            name="homeViewModel"
            type="es.chewiegames.bloggie.viewmodel.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:elevation="6dp"
            android:focusable="true"
            app:cardCornerRadius="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{(v) -> homeViewModel.onPostClicked(feedPost, (feedPost.titleImage!=null) ? postImage : null, postTitle)}">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/post_cover_height">

                <ImageView
                    android:id="@+id/postImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/post_cover_height"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/post_image_description"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    app:feedPostTitleImage="@{feedPost.titleImage}"
                    app:logoNoImage="@{logoNoImage}"
                    app:progressBarImage="@{imageViewProgressBar}"
                    app:srcCompat="@drawable/background_splash"
                    android:transitionName="@{feedPost.id}"/>

                <ImageView
                    android:id="@+id/logoNoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_launcher"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/profileContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/card_margin_post_content"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/profilePostImageView"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_gravity="center"
                        app:profileImage="@{user.avatar}"
                        app:srcCompat="@mipmap/ic_launcher_round" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <CheckBox xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/littlePoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/card_margin_post_content"
                            android:background="@null"
                            android:button="@drawable/fill_in_heart"
                            android:gravity="center"
                            android:checked="@{homeViewModel.isLikedPost(feedPost)}"
                            android:textColor="@color/heart_gray"
                            app:onLittlePointChecked="@{homeViewModel}"
                            app:position="@{adapterPosition}"/>

                        <ImageView
                            android:id="@+id/comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_padding"
                            app:srcCompat="@drawable/ic_comment"
                            android:onClick="@{(v) -> homeViewModel.onAddCommentClicked(homeViewModel.posts[adapterPosition])}"/>
                    </LinearLayout>

                </LinearLayout>

                <ProgressBar
                    android:id="@+id/imageViewProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible" />
                <!--android:layout_height="@dimen/post_cover_height"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileContainer"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/card_margin_post_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/postTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/card_margin"
                        android:layout_marginEnd="@dimen/card_margin"
                        android:text="@{feedPost.title}"
                        android:textAllCaps="true"
                        android:textColor="@color/primaryText"
                        tools:text="Aventura con mi HalcÃ³n Milenario"
                        android:transitionName="@{feedPost.title}"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_margin"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/littlePointCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/card_padding"
                            android:text="@{String.valueOf(feedPost.littlePoints)}"
                            android:textColor="@color/primaryText"
                            tools:text="999" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/littlepoints"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/commentsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="12"
                            android:padding="@dimen/card_padding"
                            android:text="@{String.valueOf(feedPost.comments.size)}"
                            android:textColor="@color/primaryText"
                            tools:text="999" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="12"
                            android:text="@string/comments"
                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/viewsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="12"
                            android:padding="@dimen/card_padding"
                            android:text="@{String.valueOf(feedPost.views)}"
                            android:textColor="@color/primaryText"
                            tools:text="999" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLength="12"
                            android:text="@string/views"

                            android:textColor="@color/primaryText" />

                        <TextView
                            android:id="@+id/timeAgo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:textColor="@color/primaryText"
                            android:textSize="11sp"
                            tools:text="10m" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
