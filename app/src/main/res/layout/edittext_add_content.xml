<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sendMsgLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <EditText
        android:id="@+id/editTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/type_content"
        android:imeOptions="actionDone">
    </EditText>

    <LinearLayout
        android:id="@+id/editContentButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/editTextContent"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/boldButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_format_bold"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp" />
        <ImageButton
            android:id="@+id/italicButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_format_italic"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp" />
        <ImageButton
            android:id="@+id/underlineButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_format_underlined"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp" />
        <ImageButton
            android:id="@+id/colorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_format_color"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp" />

    </LinearLayout>
</RelativeLayout>