<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/foregroundView"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_post_content"
        android:layout_marginRight="@dimen/card_margin_post_content"
        android:layout_marginLeft="@dimen/card_margin_post_content"
        android:layout_marginEnd="@dimen/card_margin_post_content"
        android:layout_marginStart="@dimen/card_margin_post_content"
        android:layout_marginBottom="@dimen/card_margin"
        >

        <TextView
            android:visibility="visible"
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            style="@style/Widget.CardContent"
            />

        <include layout="@layout/edittext_add_content" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_done"
        android:textColor="@color/primaryText"
        android:layout_below="@+id/foregroundView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/card_margin_post_content"
        android:layout_marginLeft="@dimen/card_margin_post_content"
        android:layout_marginEnd="@dimen/card_margin_post_content"
        android:layout_marginStart="@dimen/card_margin_post_content"
        android:layout_marginBottom="@dimen/card_margin_post_content"
        app:fabSize="mini"/>

</RelativeLayout>